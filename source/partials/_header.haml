%header
  .navbar.navbar-default
    .container-fluid
      .navbar-header
        %button.navbar-toggle.collapsed{type: "button", data: {toggle: "collapse", target: "#bs-example-navbar-collapse-1"}, aria: {expanded: "false"}}
          %span.sr-only Toggle navigation
          - 3.times do
            %span.icon-bar
        %a.navbar-brand{href: "/"} Code for Hakodate
      .collapse.navbar-collapse#bs-example-navbar-collapse-1
        %ul.nav.navbar-nav
          - if page_url == "/"
            %li.active= link_to "Home", "/"
          - else
            %li= link_to "Home", "/"
              
          - if page_url == "about"
            %li.active= link_to "私達について", "about"
          - else
            %li= link_to "私達について", "about"
              
          - if page_url == "project"
            %li.active= link_to "プロジェクト", "#"
          - else
            %li= link_to "プロジェクト", "#"

          - if page_url == "press"
            %li.active= link_to "プレス", "http://press.codeforhakodate.org"
          - else
            %li= link_to "プレス", "http://press.codeforhakodate.org"
          %li= link_to "Facebook", "https://www.facebook.com/code4hakodate", target: "_blank"
          %li= link_to "GitHub", "https://github.com/codeforhakodate", target: "_blank"
